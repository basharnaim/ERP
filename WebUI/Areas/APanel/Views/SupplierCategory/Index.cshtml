@model IEnumerable<Library.ViewModel.Inventory.Suppliers.SupplierCategoryViewModel>
@using ERP.WebUI.Html
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-xl-12">
        <div class="d-flex justify-content-between pb-1">
            <a href="/APanel/SupplierCategory/Create" class="btn btn-bg" role="button">Add New</a>
            <a href="/APanel" class="btn btn-bg top-button-back float-right" role="button">Back</a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-12">
        <div class="panel panel-default card">
            <div class="card-header ProductBasicConfigurationCategory_tittle">Customer Category Information</div>
            <div class="panel-body card-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead class="thead-heading">
                            <tr>
                                <th>Sequence</th>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Sequence)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Code)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.YesNoFor(modelItem => item.Active)
                                        </td>
                                        <td>
                                            @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn-sm btn-bg fa fa-edit" })
                                            <a href="javascript:void(0);" data-url="/APanel/SupplierCategory/Delete/@item.Id" class="btn-sm btn-bg fa fa-trash btnRemove"></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {
        });

        $("#btnClear").on("click", function () {
            $("#supplierCategoryId").val('').trigger("change");
            $("#supplierSubCategoryId").val('').trigger("change");
        });

    </script>
}

