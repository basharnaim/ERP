@using (Ajax.BeginForm("Create", "BankMaster", null, new AjaxOptions { HttpMethod = "POST" }, new { id = "DialogForm" }))
{
    <div class="row">
        <div class="col-3">
            <div class="form-group">
                <label class="control-label   mendatory">Company</label>
                @Html.SimpleDropDownFor(model => model.CompanyId, "/APanel/Company/GetCompanyList/", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CompanyId, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label class="control-label   mendatory">Branch</label>
                @Html.CascadingDropDownFor(model => model.BranchId, "/APanel/Branch/GetBranchList?id=", "CompanyId", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BranchId, null, new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <hr />
    @*<div class="row ">
        <div class="col-xl-12">
            <div class="card ">
                <div class="card-header BankMaster_tittle">Bank Master Information</div>
                <div class="card-body">*@
    <div class="row">
        <div class="col-12">
            <div class="panel panel-default card">
                <div class="card-header alert-secondary">
                    Bank Master Information
                </div>
                <div class="panel-body card-body">
                    <div class="dataTable_wrapper">
                        <div class="row">
                            <div class="col-3">
                                <div class="form-group">
                                    <label class="control-label   mendatory ">Bank</label>
                                    @Html.SimpleDropDownFor(model => model.BankId, "/APanel/Bank/GetBankList/", new { @class = "form-control", placeholder = "--Select--" })
                                    @Html.ValidationMessageFor(model => model.BankId, null, new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label class="control-label  " title="Account title">Account Title</label>
                                    @Html.TextBoxFor(model => model.AccountTitle, new { @class = "form-control", onclick = "this.select()" })
                                    @Html.ValidationMessageFor(model => model.AccountTitle, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    <label class="control-label   mendatory ">Bank Branch</label>
                                    @Html.CascadingDropDownFor(model => model.BankBranchId, "/APanel/BankBranch/GetBankBranchList?bankId=", "BankId", new { @class = "form-control", placeholder = "--Select--" })
                                    @Html.ValidationMessageFor(model => model.BankBranchId, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label class="control-label   mendatory ">Account No</label>
                                    @Html.TextBoxFor(model => model.AccountNo, new { @class = "form-control", placeholder = "Account No" })
                                    @Html.ValidationMessageFor(model => model.AccountNo, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    <label class="control-label   mendatory" title="Opening Balance">Opening Balance</label>
                                    @Html.TextBoxFor(model => model.OpeningBalance, new { @class = "form-control", type = "number", onclick = "this.select()" })
                                    @Html.ValidationMessageFor(model => model.OpeningBalance, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    <label class="control-label   " title="Transection Date">Transection Date</label>
                                    @Html.DatePickerFor(model => model.OpeningDate, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.OpeningDate, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="col-12">
                                    <div class="form-group">
                                        <div class=" submit-button text-right">
                                            <button type="submit" class="btn btn-default btn-success col-1"> Save </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

    </script>
}
