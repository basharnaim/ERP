@using (Html.BeginForm("Index", "UserRole", FormMethod.Get))
{
    <div class="row">
        <div class="col-12">
            <div class="panel panel-default card">
                <div class="card-header Branch_tittle alert-secondary">
                    Bank Information
                    <a href="/APanel/Bank/Create" class="btn btn-bg btn-sm" role="button">Add New</a>
                    <a href="/APanel" class="btn btn-bg btn-sm pull-right" role="button">Back</a>
                </div>
                <div class="panel-body card-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead class="thead-heading">
                                <tr>
                                    <th>Sequence</th>
                                    <th>Code</th>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Sequence)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Code)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.YesNoFor(modelItem => item.Active)
                                            </td>
                                            <td>
                                                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn-sm btn-bg fa fa-edit" })
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}