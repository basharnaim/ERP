@model IEnumerable<Library.ViewModel.Core.Addresses.DistrictViewModel>
@using ERP.WebUI.Html
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-xl-12">
        <div class="top-button">
            <a href="/APanel/District/Create" class="btn btn-bg" role="button">Add New</a>
            <a href="/APanel" class="btn btn-bg pull-right" role="button">Back</a>
            <hr />
        </div>
    </div>
</div>
@using (Html.BeginForm("Index", "ProductBasicConfiguration", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label ">District Information</label>
                @Html.SimpleDropDown("productBasicConfigurationCategoryId", "/APanel/ProductBasicConfigurationCategory/GetConfigurationCategoryList/", new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <div class=" submit-button">
                    <button type="submit" class="btn btn-bg">Show</button>
                </div>
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-xl-12">
        <div class="panel panel-default card">
            <div class="card-header District_tittle">District Information</div>
            <div class="panel-body card-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead class="thead-heading">
                            <tr>
                                <th>Sequence</th>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var district in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelDistrict => district.Sequence)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelDistrict => district.Code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelDistrict => district.Name)
                                    </td>
                                    <td>
                                        @Html.YesNoFor(modelItem => district.Active)
                                    </td>
                                    <td>
                                        @Html.ActionLink(" ", "Edit", new { id = district.Id }, new { @class = "btn-sm btn-bg fa fa-edit" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {

        });
    </script>
}



