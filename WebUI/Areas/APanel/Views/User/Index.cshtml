@using (Html.BeginForm("Index", "User", FormMethod.Get))
{
    <div class="row">
        <div class="col-3">
            <div class="form-group">
                <label class="control-label   ">Company</label>
                @Html.SimpleDropDown("companyId", "/APanel/Company/GetCompanyList/", new { @class = "form-control" })
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label class="control-label   ">Branch</label>
                @Html.CascadingDropDown("branchId", "/APanel/Branch/GetBranchList?id=", "companyId", new { @class = "form-control" })
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <div class="submit-button">
                    <button type="submit" class="btn btn-bg">Show</button>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header alert-secondary">
                User Information
                <a href="/APanel/User/Create" class="btn btn-bg btn-sm" role="button">Add New</a>
                <a href="/APanel" class="btn btn-bg top-button-back float-right btn-sm" role="button">Back</a>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead class="thead-heading">
                        <tr>
                            <th>User Id</th>
                            <th>Full Name</th>
                            <th>User Group</th>
                            <th>Branch</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserGroupName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BranchName)
                                </td>
                                <td>
                                    @Html.YesNoFor(modelItem => item.Active)
                                </td>
                                <td>
                                    @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn-sm btn-bg fa fa-edit" })
                                    @Html.ActionLink("Reset ", "ResetPassword", new { id = item.Id }, new { @class = "btn-sm btn-bg" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
