@model IEnumerable<Library.ViewModel.Inventory.Customers.CustomerViewModel>
@{
    Layout = null;
}
<section class="innerSection clearfix">
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead class="th-header">
                <tr>
                    <th>
                        <input type="checkbox" id="CheckAllCustomer" name="CheckAllCustomer" />
                    </th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.CheckBox("Select", new { @class = "customerIdSelect" })
                        @Html.HiddenFor(modelItem => item.Id, new { @class = "customerId" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address1)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="jumbotron" style="text-align:center;font-size:20px;">
            <mark>Distributor list not found!</mark>
        </div>
    }
</section>
<script>
    $("#CheckAllCustomer").click(function () {
        if ($(this).is(":checked")) {
            $('.customerIdSelect').prop('checked', true);
        }
        else {
            $('.customerIdSelect').prop('checked', false);
        }
    });
</script>


