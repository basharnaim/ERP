@model IEnumerable<Library.ViewModel.Core.Addresses.DivisionViewModel>
@using ERP.WebUI.Html
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-xl-12">
        <div class="panel panel-default card">
            <div class="card-header Warehouse_tittle alert-info">
                <a href="/APanel/Division/Create" class="btn btn-bg btn-sm" role="button"><i class="fa fa-plus-circle"></i> Add New </a> Division Information
                <a href="/APanel" class="btn btn-bg top-button-back float-right btn-sm" role="button"><i class="fa fa-undo"></i> Back</a>
            </div>
            <div class="panel-body card-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead class="thead-heading">
                            <tr>
                                <th>Sequence</th>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var division in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelDivision => division.Sequence)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelDivision => division.Code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelDivision => division.Name)
                                    </td>
                                    <td>
                                        @Html.YesNoFor(modelItem => division.Active)
                                    </td>
                                    <td>
                                        @Html.ActionLink(" ", "Edit", new { id = division.Id }, new { @class = "btn-sm btn-bg fa fa-edit" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {

        });
    </script>
}