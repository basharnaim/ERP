<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead class="thead-heading">
                            <tr>
                                <th>CategoryName</th>
                                <th>ProductCode</th>
                                <th>ProductName</th>
                                <th>Quantity</th>
                                <th>Purchase Price</th>
                                <th>Sale Price</th>
                                <th>ProfitLoss</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow item in Model.Tables["SaleProfitLoss"].Rows)
                            {
                                <tr>
                                    <td>
                                        @item["CategoryName"]
                                    </td>
                                    <td>
                                        @item["ProductCode"]
                                    </td>
                                    <td class="">
                                        @item["ProductName"]
                                    </td>
                                    <td class="text-right">
                                        @item["Quantity"]
                                    </td>
                                    <td class="text-right">
                                        @String.Format("{0:n}", item["PurchasePrice"])                                      
                                    </td>
                                    <td class="text-right">
                                        @String.Format("{0:n}", item["SalePrice"])                                     
                                    </td>
                                    <td class="text-right">
                                        @String.Format("{0:n}", item["ProfitLoss"])                                      
                                    </td>                                 
                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr class="text-right font-bold">
                                <td colspan="3">Total:</td>
                                <td>@data.Sum(i => i.Field<decimal>("Quantity"))</td>
                                <td>@data.Sum(i => i.Field<decimal>("PurchasePrice"))</td>
                                <td>@data.Sum(i => i.Field<decimal>("SalePrice"))</td>
                                <td>@data.Sum(i => i.Field<decimal>("ProfitLoss"))</td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
