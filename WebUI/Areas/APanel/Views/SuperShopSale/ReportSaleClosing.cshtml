@using (Html.BeginForm("ReportSaleClosing", "SuperShopSale", FormMethod.Get))
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header alert-success h5">
                    Sales Information
                    <a href="/Home" class="btn btn-bg pull-right btn-sm" role="button"><i class="fa fa-undo"></i> Back </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label   mendatory">Company</label>
                                @Html.SimpleDropDown("companyId", "/APanel/Company/GetCompanyList/", new { @class = "form-control", data_val = "true", data_val_required = "this is required" })
                                @Html.ValidationMessage("companyId", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label  ">Branch</label>
                                @Html.CascadingDropDown("branchId", "/APanel/Branch/GetBranchList?id=", "companyId", new { @class = "form-control" })
                                @Html.ValidationMessage("branchId", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label   mendatory">Counter</label>
                                @Html.CascadingDropDown("salePersonId", "/APanel/User/GetSalesPersonLists?branchId=", "branchId", new { @class = "form-control", data_val = "true", data_val_required = "this is required" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label   mendatory" title="From date">From date</label>
                                @Html.DatePicker("dateFrom", new { @class = "form-control", data_val = "true", data_val_required = "this is required" })
                                @Html.ValidationMessage("dateFrom", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label   mendatory">To date</label>
                                @Html.DatePicker("dateTo", new { @class = "form-control", data_val = "true", data_val_required = "this is required" })
                                @Html.ValidationMessage("dateTo", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group ">
                                <div class="submit-button">
                                    <button type="submit" class="btn btn-bg">Show</button>
                                    @Html.ActionLink("Report", "RdlcReportSaleClosing", "SuperShopSale", new { target = "_blank", id = "btnReport", @class = "btn btn-primary pull-middle" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead class="thead-heading">
                            <tr>
                                <th>Invoice No.</th>
                                <th>Sales Date</th>
                                <th>Customer Name</th>
                                <th>Total Quantity</th>
                                <th>Total Amount</th>
                                <th>Total Vat</th>
                                <th>Total Discount</th>
                                <th>Net Amount</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SaleDate)
                                        </td>
                                        <td class="text-right">
                                            @Html.DisplayFor(modelItem => item.CustomerName)
                                        </td>
                                        <td class="text-right">
                                            @Html.DisplayFor(modelItem => item.TotalQuantity)
                                        </td>
                                        <td class="text-right">
                                            @Html.DisplayFor(modelItem => item.TotalAmount)
                                        </td>
                                        <td class="text-right">
                                            @Html.DisplayFor(modelItem => item.TotalVat)
                                        </td>
                                        <td class="text-right">
                                            @Html.DisplayFor(modelItem => item.ProductDiscount)
                                        </td>
                                        <td class="text-right">
                                            @Html.DisplayFor(modelItem => item.NetAmount)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Report", "ReportSaleMasterDetail", "SuperShopSale", new { companyId = item.CompanyId, branchId = item.BranchId, id = item.Id }, new { target = "_blank", @class = "btn-sm btn-primary glyphicon glyphicon-edit" })
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            @if (Model != null && Model.Any())
                            {
                                <tr class="text-right font-bold">
                                    <td colspan="3">Total:</td>
                                    <td>@Html.Raw(Model.Sum(x => Math.Round(x.TotalQuantity, 2)))</td>
                                    <td>@Html.Raw(Model.Sum(x => Math.Round(x.TotalAmount, 2)))</td>
                                    <td>@Html.Raw(Model.Sum(x => Math.Round(x.TotalVat, 2)))</td>
                                    <td>@Html.Raw(Model.Sum(x => Math.Round(x.ProductDiscount, 2)))</td>
                                    <td>@Html.Raw(Model.Sum(x => Math.Round(x.NetAmount, 2)))</td>
                                    <td colspan="1"></td>
                                </tr>
                            }
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {
            var dateFrom = getUrlVars()["dateFrom"];
            $("#dateFrom").val(dateFrom);
            var dateTo = getUrlVars()["dateTo"];
            $("#dateTo").val(dateTo);
        });



        $("#btnReport").click(function () {
            var companyId = $('#companyId').val();
            var branchId = $('#branchId').val();
            var dateFrom = $('#dateFrom').val();
            var dateTo = $('#dateTo').val();
            var salePersonId = $('#salePersonId').val();
            this.href = this.href.split('?')[0] + '?companyId=' + companyId
                + '&branchId=' + branchId
                + '&dateFrom=' + dateFrom
                + '&dateTo=' + dateTo
                + '&salePersonId=' + salePersonId;
        });

        $("#btnClear").on("click", function () {
            $("#companyId").val('').trigger("change");
            $("#branchId").val('').trigger("change");
            $("#salePersonId").val('').trigger("change");
            $("#dateFrom").val('').trigger("change");
            $("#dateTo").val('').trigger("change");
        });
    </script>
}
