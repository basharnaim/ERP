@model IEnumerable<Library.ViewModel.Inventory.Promotions.PromotionalDiscountViewModel>
@using ERP.WebUI.Html
@{
    ViewBag.Title = "Index";
}
    <div class=" ">
        <div class="row">
            <div class="col-xl-12">
                <div class="d-flex justify-content-between pb-1">
                    <a href="/APanel/PromotionalDiscount/Create" class="btn btn-bg" role="button">Add New</a>
                    <a href="/APanel" class="btn btn-bg top-button-back float-right" role="button">Back</a>
                </div>
                <hr>
            </div>
        </div>
        @*<span>Discounts</span>
        <div class="header-btn">
            <a href="/APanel/PromotionalDiscount/Create" class="btn btn-sm btn-success" role="button"><i class="fa fa-plus" aria-hidden="true"></i>Add New</a>
            <a href="/APanel" class="button-back" role="button"><i class="fa fa-arrow-left" aria-hidden="true"></i>Back</a>
        </div>*@
    </div>
@using (Html.BeginForm("Index", "PromotionalDiscount", FormMethod.Get, new { id = "SearchForm" }))
{
    <div class="box border-btm">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label title="From date" class="mendatory">From date</label>
                    @Html.DatePicker("dateFrom", new { @class = "form-control", data_val = "true", data_val_required = "This field is required" })
                    @Html.ValidationMessage("dateFrom", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="mendatory">To date</label>
                    @Html.DatePicker("dateTo", new { @class = "form-control", data_val = "true", data_val_required = "This field is required" })
                    @Html.ValidationMessage("dateTo", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-3">
                <div class=" submit-button">
                    <button type="button" id="btnSubmit" class="btn  btn-bg"><i class="fa fa-search p-1" aria-hidden="true"></i>Show</button>
                </div>
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead class="thead-heading">
                            <tr>
                                <th>SL#</th>
                                <th>Name</th>
                                <th>Date from</th>
                                <th>Date To</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sequence)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.Raw(item.DateFrom.ToString("dd-MMM-yyyy"))
                                </td>
                                <td>
                                    @Html.Raw(item.DateTo.ToString("dd-MMM-yyyy"))
                                </td>
                                <td>
                                    @Html.YesNoFor(modelItem => item.Active)
                                </td>
                                <td>
                                    @Html.ActionLink(" Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-bg fa fa-pencil" })
                                </td>
                            </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {
            var dateFrom = getUrlVars()["dateFrom"];
            $("#dateFrom").val(dateFrom);
            var dateTo = getUrlVars()["dateTo"];
            $("#dateTo").val(dateTo);
        });

        $("#btnSubmit").on("click", function () {
            if ($("#SearchForm").valid()) {
                $("#SearchForm").submit();
                return true;
            }
            else {
                return false;
            }
        });

    </script>
}

