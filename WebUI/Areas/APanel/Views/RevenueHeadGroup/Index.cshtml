@model IEnumerable<Library.ViewModel.Core.Revenues.RevenueHeadGroupViewModel>
@using ERP.WebUI.Html
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-xl-12">
        <div class="mb-2 mt-2">
            <a href="/CPanel/ProductBasicConfigurationCategory/Create" class="btn btn-bg" type="button">Add New</a>
            <a href="/CPanel" class="btn btn-bg pull-right" type="button">Back</a>
        </div>
    </div>
    <!-- /.col-xl-12 -->
</div>
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header ProductBasicConfigurationCategory_tittle">Product Configuration Category Information</div>
            <!-- /.card-header -->
            <div class="card-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Sequence</th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sequence)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.YesNoFor(modelItem => item.Active)
                                    </td>
                                    <td>
                                        @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn-sm btn-bg fa fa-edit" })
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-xl-12 -->
</div>

