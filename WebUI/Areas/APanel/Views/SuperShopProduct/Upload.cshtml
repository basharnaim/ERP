@model IEnumerable<Library.Model.Inventory.Purchases.OpeningBlance>
@using ERP.WebUI.Html

@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="col-xl-12">
        <div class="">
            <a href="/APanel/SuperShopProduct" class="btn btn-bg pull-right mb-2" type="button">Back</a>
        </div>
    </div>
    <!-- /.col-xl-12 -->
</div>
@using (Ajax.BeginForm("Upload", "SuperShopProduct", null, new AjaxOptions { HttpMethod = "POST" }, new { @id = "DialogForm", enctype = "multipart/form-data" }))
{

    <div class="row ">
        <div class="col-6">
            <div class="card ">
                <div class="card-header User_tittle h4 bg-info">Super Shop Product Upload</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-3">
                            <a class="btn btn-default btn-primary add-new" href="~/UploadSample/COUNTRY Wise Products List.xlsx">
                                <i class="fa fa-download hidden-xs"></i> Download Sample &nbsp;&nbsp;
                            </a>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <input type="file" id="file" name="file" required="required" />
                            </div>
                        </div>
                        <div class="col-3">
                            <button type="submit" class="btn btn-bg">
                                <i class="fa fa-upload "></i> Upload
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card ">
                <div class="card-header User_tittle h4 bg-info">Opening Balance Product Upload</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-3">
                            <a class="btn btn-default btn-primary add-new" href="~/UploadSample/COUNTRY Wise Products List.xlsx">
                                <i class="fa fa-download hidden-xs"></i> Download Sample &nbsp;&nbsp;
                            </a>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <input type="file" id="file" name="file" required="required" />
                            </div>
                        </div>
                        <div class="col-3">
                            <button type="submit" class="btn btn-bg">
                                <i class="fa fa-upload "></i> Upload
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row ">
        <div class="col-12">
            <div class="card ">
                <div class="card-header User_tittle h4 bg-info">Opening Balance Product List</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead class="thead-heading">
                                        <tr>
                                            <th>Purchase No.</th>
                                            <th>Purchase Date</th>
                                            <th>Supplier Name</th>
                                            <th>Total Quantity</th>
                                            <th>Total Amount</th>
                                            <th>Memo Discount</th>
                                            <th>Net Amount</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Any())
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Id)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TransectionNo)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TransectionDate)
                                                    </td>
                                                    <td class="text-right">
                                                        @Html.DisplayFor(modelItem => item.TransectionQty)
                                                    </td>
                                                    <td class="text-right">
                                                        @Html.DisplayFor(modelItem => item.StockUnitPrice)
                                                    </td>
                                                    <td class="text-right">
                                                        @Html.DisplayFor(modelItem => item.StockQty)
                                                    </td>
                                                    <td class="text-right">
                                                        @Html.DisplayFor(modelItem => item.StockAmount)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Report ", "ReportPurchaseMasterDetail", "SuperShopPurchase", new { companyId = item.CompanyId, branchId = item.BranchId, purchaseId = item.Id }, new { target = "_blank", @class = "btn-sm btn-bg fa fa-edit" })
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                    @*<tfoot>
                                        @if (Model != null && Model.Any())
                                        {
                                            <tr class="text-right font-bold">
                                                <td colspan="3">Total:</td>
                                                <td>@Html.Raw(Model.Sum(x => Math.Round(x.TotalQuantity, 2)))</td>
                                                <td>@Html.Raw(Model.Sum(x => Math.Round(x.TotalAmount, 2)))</td>
                                                <td>@Html.Raw(Model.Sum(x => Math.Round(x.NetAmount, 2)))</td>
                                                <td></td>
                                            </tr>
                                        }
                                    </tfoot>*@
                                </table>
                            </div>
                        </div>
                        <div class="offset-11 pull-right">
                            <button type="submit" class="btn btn-bg pull-right"> <i class="fa fa-save "></i> Update </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(() => {

        });

    </script>
}
