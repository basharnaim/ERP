@{
    ViewBag.Title = "Upload";
    if (ViewBag.Success != null && ViewBag.Success != "")
    {
        <script>
            ShowResult("Data saved successfully.", "success");
        </script>
    }
    if (ViewBag.Fail != null && ViewBag.Fail != "")
    {
        <script>
            ShowResult('@ViewBag.Fail', "failure");
        </script>
    }
}
<section class="innerSection clearfix">
    <div class="box">
        <form class="form-horizontal" role="form" method="post" action="/APanel/Item/Upload" enctype="multipart/form-data" id="DialogForm">
            <h3>
                Product list upload excel file
                <a class="btn btn-bg btn-back pull-right" href="/APanel/Item"><i class="fa fa-long-arrow-left" aria-hidden="true"></i> back</a>
                <a class="btn btn-default btn-primary add-new" href="~/UploadSample/ProductList.xlsx">
                    <i class="fa fa-download hidden-xs"></i> Download Sample &nbsp;&nbsp;
                </a>
            </h3>
            <div class="row">
                <div class="container-fluid">
                    <div class="form-group">
                        <div class="col-sm-3">
                            Product list file
                        </div>
                        <div class="col-sm-9">
                            <input type="file" id="file" name="file" required="required" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3"></div>
                        <div class="col-sm-9">
                            <button type="submit" id="btnSearch" class="btn btn-default btn-bg"><i class="fa fa-upload hidden-xs"></i> Upload</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {

        });

        $("button[type='submit']").click(function (e) {
            e.preventDefault();
            if ($("#DialogForm").valid()) {
                $("#DialogForm").submit();
                return true;
            }
            else {
                return false;
            }
        });
    </script>
}