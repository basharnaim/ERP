@model IEnumerable<Library.ViewModel.Inventory.Products.CourierViewModel>
@using ERP.WebUI.Html
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-12">
        <div class="d-flex justify-content-between border-bottom pb-1">
            <a href="/Courier/Create" class="btn btn-bg" role="button">Add New</a>
            <a href="/Home" class="btn btn-bg top-button-back float-right" role="button">Back</a>
        </div>
    </div>
</div>
<div class="row ">
    <div class="col-xl-12">
        <div class="card ">
            <div class="card-header Courier_tittle">Courier Information</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="dataTable_wrapper">
                                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                        <thead class="thead-heading">
                                            <tr>
                                                <th>Sequence</th>
                                                <th>Code</th>
                                                <th>Name</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null && Model.Any())
                                            {
                                                foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Sequence)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Code)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Name)
                                                        </td>
                                                        <td>
                                                            @Html.YesNoFor(modelItem => item.Active)
                                                        </td>
                                                        <td>
                                                            @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn-sm btn-bg fa fa-edit" })
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                

