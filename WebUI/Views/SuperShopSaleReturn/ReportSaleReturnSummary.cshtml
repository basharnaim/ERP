@model IEnumerable<Library.ViewModel.Inventory.Sales.SaleReturnViewModel>
@using ERP.WebUI.Html
@{
    ViewBag.Title = "Sales Summary Report";
}
<div class="row">
    <div class="col-lg-12">
        <a href="/Home" class="btn btn-primary pull-right top-button-back" role="button">Back</a>
        <h4 class="page-header">Sales Information</h4>
    </div>
</div>
@using (Html.BeginForm("ReportSaleReturnSummary", "SuperShopSaleReturn", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label   mendatory">Company</label>
                @Html.SimpleDropDown("companyId", "/Company/GetCompanyList/", new { @class = "form-control", data_val = "true", data_val_required = "this is required" })
                @Html.ValidationMessage("companyId", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label   mendatory" title="From date">From date</label>
                @Html.DatePicker("dateFrom", new { @class = "form-control", data_val = "true", data_val_required = "this is required" })
                @Html.ValidationMessage("dateFrom", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label  ">Branch</label>
                @Html.CascadingDropDown("branchId", "/Branch/GetBranchList?id=", "companyId", new { @class = "form-control" })
                @Html.ValidationMessage("branchId", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label class="control-label   mendatory">To date</label>
                @Html.DatePicker("dateTo", new { @class = "form-control", data_val = "true", data_val_required = "this is required" })
                @Html.ValidationMessage("dateTo", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label   ">Customer</label>
                @Html.SimpleDropDown("customerId", "/Customer/GetCustomerList", new { @class = "customerCategoryId form-control select" })
            </div>
            <div class="form-group ">
                <div class="submit-button">
                    <button type="submit" class="btn btn-bg">Show</button>
                    @Html.ActionLink("Report", "RdlcReportSaleSummary", "SuperShopSaleReturn", new { target = "_blank", id = "btnReport", @class = "btn btn-primary pull-middle" })
                    @Html.ActionLink("Detail Report", "SaleReturnList", "SuperShopSaleReturn", new { @class = "btn btn-primary pull-middle" })
                    <input type="button" value="Clear" class="btn btn-warning" id="btnClear" />
                </div>
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead class="thead-heading">
                            <tr>
                                <th>Invoice No.</th>
                                <th>Sales Date</th>
                                <th>Return Date</th>
                                <th>Customer Name</th>
                                <th>Total Quantity</th>
                                <th>Total Amount</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SaleDate)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.SalesReturnDate)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.CustomerName)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.TotalQuantity)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.TotalAmount)
                                </td>
                                <td>
                                    @Html.ActionLink("Report", "ReportSaleMasterDetail", "SuperShopSaleReturn", new { companyId = item.CompanyId, branchId = item.BranchId, id = item.Id }, new { target = "_blank", @class = "btn-sm btn-primary glyphicon glyphicon-edit" })
                                    @Html.ActionLink("Label", "ReportLevelPrint", "SuperShopSaleReturn", new { id = item.Id }, new { target = "_blank", @class = "btn-sm btn-bg fa fa-edit" })
                                </td>
                            </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            @if (Model != null && Model.Any())
                            {
                                 <tr class="text-right font-bold">
                                    <td colspan="3">Total:</td>
                                    <td>@Html.Raw(Model.Sum(x => Math.Round(x.TotalQuantity, 2)))</td>
                                    <td>@Html.Raw(Model.Sum(x => Math.Round(x.TotalAmount, 2)))</td>
                                    <td colspan="1"></td>
                                </tr>
                            }
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {
            var dateFrom = getUrlVars()["dateFrom"];
            $("#dateFrom").val(dateFrom);
            var dateTo = getUrlVars()["dateTo"];
            $("#dateTo").val(dateTo);
        });



        $("#btnReport").click(function () {
            var companyId = $('#companyId').val();
            var branchId = $('#branchId').val();
            var dateFrom = $('#dateFrom').val();
            var dateTo = $('#dateTo').val();
            var customerId = $('#customerId').val();
            this.href = this.href.split('?')[0] + '?companyId=' + companyId
                + '&branchId=' + branchId
                + '&dateFrom=' + dateFrom
                + '&dateTo=' + dateTo
                + '&customerId=' + customerId;
        });

        $("#btnClear").on("click", function () {
            $("#companyId").val('').trigger("change");
            $("#branchId").val('').trigger("change");
            $("#customerId").val('').trigger("change");
            $("#dateFrom").val('').trigger("change");
            $("#dateTo").val('').trigger("change");
        });
    </script>
}
