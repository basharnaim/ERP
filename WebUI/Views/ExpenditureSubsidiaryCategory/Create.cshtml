@model Library.ViewModel.Inventory.Expenditures.ExpenditureSubsidiaryCategoryViewModel
@using ERP.WebUI.Html
@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="col-xl-12">
        <div class="d-flex justify-content-end pb-1">
            <a href="/ExpenditureSubsidiaryCategory" class="btn btn-bg" role="button">Back</a>
        </div>
    </div>
</div>
@using (Ajax.BeginForm("Create", "ExpenditureSubsidiaryCategory", null, new AjaxOptions { HttpMethod = "POST" }, new { id = "DialogForm" }))
{
    <div class="row ">
        <div class="col-xl-12">
            <div class="card ">
                <div class="card-header ExpenditureSubsidiaryCategory_tittle">Add Expenditure SubsidiaryCategory</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Code, new { @class = "control-label   mendatory" })
                                @Html.TextBoxFor(model => model.Code, new { @class = "form-control", type = "number" })
                                @Html.ValidationMessageFor(model => model.Code, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, new { title = "Subsidiary Category Name", @class = "control-label   mendatory" })
                                @Html.TextBoxFor(model => model.Name, new { autofocus = "", @class = "form-control", placeholder = "Subsidiary name" })
                                @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label class="control-label   mendatory" title="Expenditure Category">Category</label>
                                @Html.SimpleDropDownFor(model => model.ExpenditureCategoryId, "/ExpenditureCategory/GetExpenditureCategoryList/", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ExpenditureCategoryId, null, new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label class="control-label  " title="Expenditure SubCategory">SubCategory</label>
                                @Html.CascadingDropDownFor(model => model.ExpenditureSubCategoryId, "/ExpenditureSubCategory/GetExpenditureSubCategoryList?expenditureCategoryId=", "ExpenditureCategoryId", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ExpenditureSubCategoryId, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Comment, new { @class = "control-label  " })
                                @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", placeholder = "Write something ......" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Active, new { @class = "control-label  " })
                                @Html.CheckBoxFor(model => model.Active)
                            </div>
                            <div class="row">
                                <div class="offset-xl-10 col-xl-2">
                                    <div class="form-group input-group">
                                        <button type="submit" class="btn btn-bg pull-right">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>     
    </div>
                    }

                    @section Scripts {@Scripts.Render("~/bundles/jqueryval")
                    <script type="text/javascript">
                        $(function () { 

                        });
                    </script>
                    }
