@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>POS</title>
    @Styles.Render("~/Content/bootstrapcss")
    @Styles.Render("~/Content/metisMenucss")
    @Styles.Render("~/Content/dataTablescss")
    @Styles.Render("~/Content/sbAdmincss")
    @Styles.Render("~/Content/fontawesomecss")
</head>
<body class="bg-gradient-primary">
    <div class="container">
        <div class="row">
            <div class="offset-1 col-lg-10 ">
                <div class="login-panel card">
                    <div class="row">
                        <div class="col-7 p-0"> <img src="~/Images/pos-login-image.png" class="img-fluid" style="height: 100%;" /></div>
                        <div class="col-5 mt-5 pt-5 pl-0">
                            <div class="card-header">
                                <h3 class="card-title text-center">Please Sign In @ViewBag.Message</h3>
                            </div>
                            @using (Html.BeginForm("CPanel", "Login", FormMethod.Post))
                            {
                                <div class="card-body">
                                    <form role="form">
                                        <fieldset>
                                            <div class="form-group">
                                                <input class="form-control" id="userId" name="userId" placeholder="User Id" type="text" autofocus="" required="required">
                                            </div>
                                            <div class="form-group">
                                                <input class="form-control" type="password" id="password" name="password" placeholder="Password" required="required">
                                            </div>
                                            <div class="form-check pb-3">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="checkbox" name="remember" value="Remember Me">
                                                    Remember Me
                                                </label>
                                            </div>
                                            <!-- Change this to a button or input when using this as a form --><input type="submit" class="btn btn-bg btn-user btn-block" value="Login" />
                                        </fieldset>
                                    </form>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapjs")
    @Scripts.Render("~/bundles/metisMenujs")
    @Scripts.Render("~/bundles/dataTablesjs")
    @Scripts.Render("~/bundles/sbAdminjs")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/customjs")
</body>
</html>
