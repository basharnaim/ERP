@model IEnumerable<Library.ViewModel.Inventory.Purchases.SuperShopPurchaseViewModel>
@using ERP.WebUI.Html
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-xl-12">
        <a href="/SuperShopPurchaseReturn/PurchaseReturnIndex" class="btn btn-bg pull-right top-button-back" role="button">Back</a>
        <h4 class="page-header">Purchase Return Information</h4>
    </div>
</div>
@using (Html.BeginForm("Index", "SuperShopPurchaseReturn", FormMethod.Get))
{
<div class="row">
    <div class="col-md-2">
        <div class="form-group">
            <label class="control-label  ">Supplier</label>
            @Html.SimpleDropDown("supplierId", "/Supplier/GetSupplierList", new { @class = "form-control" })

        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label class="control-label  ">From date</label>
            @Html.DatePicker("dateFrom", new { @class = "form-control" })

        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label class="control-label  ">To date</label>
            @Html.DatePicker("dateTo", new { @class = "form-control" })

        </div>

    </div>
    <div class="col-md-2">
        <div class="form-group ">
            <div class=" submit-button">
                <button type="submit" class="btn btn-bg">Show</button>
                <input type="button" value="Clear" class="btn btn-warning" id="btnClear" />
                @*@Html.ActionLink("Report", "ReportSSPurchaseSummary", "SSPurchase", new { target = "_blank", id = "btnReport", @class = "btn btn-bg pull-middle" })*@
            </div>
        </div>
    </div>
</div>
}
<div class="row">
    <div class="col-xl-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead class="thead-heading">
                            <tr>
                                <th>Invoice No</th>
                                <th>Purchase date</th>
                                <th>Supplier Name</th>
                                <th>Total Quantity</th>
                                <th>Total Amount</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PurchaseDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupplierName)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.TotalQuantity)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.TotalAmount)
                                    </td>
                                    <td>
                                        @Html.ActionLink(" Return", "Create", new { purchaseId = item.Id, supplierName = item.SupplierName }, new { target = "_blank", @class = "btn-sm btn-bg fa fa-edit" })
                                        @*@Html.ActionLink("Report", "ReportPurchaseReturnByPurchaseId", "PurchaseReturn", new { id = item.Id }, new { target = "_blank", @class = "btn-sm btn-bg fa fa-edit" })*@
                                    </td>
                                </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {@Scripts.Render("~/bundles/jqueryval")<script type="text/javascript">

    $(function () {
        
    });

    var dateFrom = getUrlVars()["dateFrom"];
    $("#dateFrom").val(dateFrom);
    var dateTo = getUrlVars()["dateTo"];
    $("#dateTo").val(dateTo);

    $("#btnClear").on("click", function () {
        $("#supplierId").val('').trigger("change");
        $("#dateFrom").val('').trigger("change");
        $("#dateTo").val('').trigger("change");
    });

</script>}

